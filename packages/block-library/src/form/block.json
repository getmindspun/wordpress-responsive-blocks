{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "mindspun/form",
    "version": "0.17.1",
    "title": "Form",
    "category": "mindspun-responsive-blocks",
    "description": "General form element meant to contain fields.",
    "example": {},
    "attributes": {
        "blockId": {
            "type": "string"
        },
        "method": {
            "type": "string",
            "default": "get"
        },
        "action": {
            "type": "string",
            "default": null
        },
        "encType": {
            "type": "string",
            "default": null
        },
        "labelPosition": {
            "type": "string",
            "default": "top"
        },
        "labelStyle": {
            "type": "object",
            "default": {},
            "selector": ".mrblx-field-label"
        },
        "labelStyleError": {
            "type": "object",
            "default": {},
            "selector": ".is-error .mrblx-field-label"
        },
        "inputStyle": {
            "type": "object",
            "default": {},
            "selector": "input"
        },
        "inputStyleFocus": {
            "type": "object",
            "default": {},
            "selector": "input:focus-visible"
        },
        "inputStyleError": {
            "type": "object",
            "default": {},
            "selector": ".is-error input"
        },
        "selectStyle": {
            "type": "object",
            "default": {},
            "selector": "select"
        },
        "selectStyleFocus": {
            "type": "object",
            "default": {},
            "selector": "select:focus-visible"
        },
        "selectStyleError": {
            "type": "object",
            "default": {},
            "selector": ".is-error select"
        },
        "textAreaStyle": {
            "type": "object",
            "default": {},
            "selector": "input"
        },
        "textAreaStyleFocus": {
            "type": "object",
            "default": {},
            "selector": "input:focus-visible"
        },
        "textAreaStyleError": {
            "type": "object",
            "default": {},
            "selector": ".is-error textarea"
        },
        "fieldErrorStyle": {
            "type": "object",
            "default": {},
            "selector": ".field-error"
        },
        "style": {
            "type": "object",
            "default": {}
        }
    },
    "textdomain": "mrblx",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./editor.css",
    "style": "file:./style.css",
    "viewScript": "file:./view.js",
    "supports": {
        "className": true
    },
    "providesContext": {
        "mindspun/formBlockId": "blockId",
        "mindspun/labelPosition": "labelPosition"
    }
}
