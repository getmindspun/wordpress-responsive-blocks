{
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "ESNext",
        "target": "ES2015",
        "lib": [
            "ES2021"
        ],
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "~shared/*": [
                "./src/_shared/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}
